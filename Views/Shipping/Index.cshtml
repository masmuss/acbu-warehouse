@model IEnumerable<warehouse.Models.Shipping>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookingConfirmation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActualShipment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CargoReady)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SealNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookingConfirmation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActualShipment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CargoReady)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SealNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destination)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
